{
  "name": "@thream/file-uploads-api",
  "version": "1.1.3",
  "description": "Thream's application programming interface to upload files.",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Thream/file-uploads-api"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "rimraf ./build && swc ./src --out-dir ./build",
    "build:dev": "swc ./src --out-dir ./build --watch",
    "build:typescript": "tsc",
    "start": "node build/index.js",
    "dev": "concurrently -k -n \"TypeScript,Node\" -p \"[{name}]\" -c \"blue,green\" \"npm run build:dev\" \"cross-env NODE_ENV=development nodemon build/index.js\"",
    "lint:commit": "commitlint",
    "lint:editorconfig": "editorconfig-checker",
    "lint:markdown": "markdownlint-cli2",
    "lint:eslint": "eslint \".\" --ignore-path \".gitignore\"",
    "lint:prettier": "prettier \".\" --check --ignore-path \".gitignore\"",
    "lint:staged": "lint-staged",
    "release": "semantic-release",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@fastify/cors": "8.2.1",
    "@fastify/helmet": "10.1.0",
    "@fastify/multipart": "7.5.0",
    "@fastify/rate-limit": "8.0.0",
    "@fastify/sensible": "5.2.0",
    "@fastify/static": "6.10.0",
    "@fastify/swagger": "8.3.1",
    "@fastify/swagger-ui": "1.6.0",
    "@sinclair/typebox": "0.26.8",
    "dotenv": "16.0.3",
    "fastify": "4.15.0",
    "fastify-plugin": "4.5.0",
    "http-errors": "2.0.0",
    "read-pkg": "7.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@saithodev/semantic-release-backmerge": "3.1.0",
    "@semantic-release/git": "10.0.1",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.44",
    "@tsconfig/strictest": "2.0.0",
    "@types/busboy": "1.5.0",
    "@types/http-errors": "2.0.1",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "concurrently": "8.0.1",
    "cross-env": "7.0.3",
    "editorconfig-checker": "5.0.1",
    "eslint": "8.37.0",
    "eslint-config-conventions": "8.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-unicorn": "46.0.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.0",
    "markdownlint-cli2": "0.6.0",
    "markdownlint-rule-relative-links": "1.1.2",
    "nodemon": "2.0.22",
    "prettier": "2.8.7",
    "rimraf": "4.4.1",
    "semantic-release": "21.0.1",
    "typescript": "5.0.3"
  }
}
